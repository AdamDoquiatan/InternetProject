<header><span></span></header><!--background for topbanner-->
<div id="top-container">
  <div id="logo"><a href='/dashboard'> <h1><span id="highlight">c</span>k</h1></a></div>
  <div id="search-bar">
  <form class="searchByQuery" action='/querySearchPage' method="GET">
  <input class="inp_searchBar" name="searchQuery" type="text" maxlength="40" placeholder="Search">
      <button class="btn_searchQuery" type="submit" value="Search">
          <img src="./images/searchIcon.png" alt="Search" />
      </button>
  </form>
  </div>
  <form name="logout" method="get" action="/">
  <label class="logoutLblPos">
      <button class="logout-btn" name="logoutbtn" type="submit" value="Logout">
          <img src="images/logoutIcon.png" alt="Log Out" />
      </button>
  </label>
</form>
</div>

{{!-- Left Side Display Info --}}

<div id="left-container">
<div id="profile-pic">
  <form action='/profilePage' method="GET">
    <input type="hidden" name="userId" value="{{user_data.user_id}}" />
    <input type="image" src="{{user_data.img_url}}" class="userImgProfilePage" alt="(userImage)">
  </form>
</div> 
<div id="name">{{user_data.full_name}}</div>
<div id="bio">{{user_data.bio}}</div><br><br><br>
</div>

<div id="right-container">
    <div id="button-div">
    <a id="like-button" href="/incrementLikes?userId={{user_data.user_id}}">Like</a><br><br><br>
    <a id="message-button" href="/sendMessagePage?userId={{user_data.user_id}}">Message</a><br><br><br>
    <a class="clickable" href="/profilePage?userId={{user_data.user_id}}">&nbsp;Posts: &nbsp;&nbsp; {{user_data.post_count}}</a><br>
    <a class="clickable">&nbsp;Likes: &nbsp; &nbsp;&nbsp;{{user_data.like_count}}</a><br><br><br>
     </div>
</div>

{{!-- All Posts Container --}}

<div id="bottom-container">
    <h2>All Posts By {{user_data.full_name}} </h2>
    {{!-- <p>{{ post_data }}</p> --}}
    <div class="feedContainer">
        {{#each post_data}}
            {{>post this}}
        {{/each}}
        </div>
</div>