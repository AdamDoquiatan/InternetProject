<div id="top-container">
  <div id="logo"><a href="#default"> <h1><span id="highlight">c</span>k</h1></a></div>
  <div id="search-bar">
  <form class="searchByQuery" action='/querySearchPage' method="GET">
  <input class="inp_searchBar" name="searchQuery" type="text" maxlength="40" placeholder="Search">
  <input class="btn_searchQuery" type="submit" value="search" />
  </form>
  </div>
  <form name="logout" method="post" action="">
  <label class="logoutLblPos">
  <input id="logout-btn" name="logoutbtn" type="submit" id="submit2" value="log out">
  </label>
</form>
</div>

{{!-- Person Info Container --}}
<div id="info-container">
  <div id="left-container">
      <p>{{ user_data }}</p>

        <div class="row">
            <div id="profile-pic-div">
                <image src="{{imgdata}}" id="profile-img" alt="profile pic">
            </div>
        </div>
         <div class="row">
            <div id="name-div">
                //name here//
                <p>{{name}}</p>
                <!--get data from database-->
            </div>
        </div>
        <div class="row">
            <div id="role-div">
                //career info//
                <p>{{description}}</p>
                <!-- get data from database-->
            </div>
        </div>
        <div class="row">
            <div id="location-div">
                //country//
                <p>{{people.country}}</p>
                <!--get data from database-->
            </div>
        </div>
    </div>

    <div id="right-container">
        <div id="button-div">
            <form action="/like/{{id}}" method="POST">
            <button type="button" class="btn">Message</button>
            <button  class="btn" type="submit">Like</button>
            </form>
        </div>
        <div id="likes-div">
            <p>Likes</p>
            <!--get/post data from/to database-->
            <p id="likescount">{{likesnumber}}</p>
        </div>
        <div id="person-likes-div">
            <p>Posts</p>
            <p id="postcount">{{postcount}}</p>
            <!--get data from database-->
        </div>
    </div>
</div>

    {{!-- All Posts Container --}}

    <div id="bottom-container">
        <h2>All Posts By {{name}} </h2>
        <p>{{ post_data }}</p>
        <div id="img-div">
            <img class="img" id="post-profile-img" src = "{{img_url}}"/>
            //img//
        </div>
         <div id="single-post">
            <div class="row" id="post-title">
                <div id="post-title">
                    //title//
                    <p id="post-title">{{title}}</p>
                </div>
                <div id="topic">
                    //topic//
                    <p id="post-topic">{{topic}}</p>
                </div>
            </div>
            <div id="post-content">
                <div class="col">
                    //content//
                    <p id="post-content">{{topic_desc}}</p>
                </div>
            </div>
            <div id="date-div">
                <div class="col">
                    //date//
                    <p id="post-date">{{date}}</p>
                </div>
            </div>
        </div>
    </div>

