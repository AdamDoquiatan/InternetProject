<h1>Convo Page</h1>
{{#each convo_data}}
  {{>convo this}}
{{/each}}
<h2>Convo Messages (latest convo's messages rendered by default)</h2>
{{#each message_data}}
  {{>message this}}
{{/each}}
{{!-- {{#if convo_data}} --}}
  <form class="createMessageModule" action='/createMessage' method="POST">
    <input type="hidden" name="convo_id" value="{{message_params.convo_id}}" />
    <input type="hidden" name="sender_user_id" value="{{message_params.sender_user_id}}" />
    <input type="hidden" name="reciever_user_id" value="{{message_params.reciever_user_id}}" />
    <input type="hidden" name="sender_full_name" value="{{message_params.sender_full_name}}" />
    <input type="hidden" name="user_img_url" value="{{message_params.user_img_url}}" />
    <input class="inp_content" name="content" type="text" maxlength="500" placeholder="Write a message..."><br> 
    <input class="btn_reply" name="message" type="submit" value="Send" />
  </form>
{{!-- {{/if}} --}}